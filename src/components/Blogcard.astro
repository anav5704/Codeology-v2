---
import { Image } from '@astrojs/image/components';
import '../styles/main.css'
const {blog} = Astro.props;
---

<div class="blogcard">
    <a href={blog.url}>
        <!-- <Image 
        src={blog.frontmatter.image}
        alt={blog.frontmatter.alt}
        height={300}
        aspectRatio={3/1}
        fit="cover"
        loading="lazy"
        decoding="async"
        format="avif"
        />  -->
        <div class="blur-load">
            <img loading="lazy" src={blog.frontmatter.image} alt={blog.frontmatter.alt}>
        </div>
    </a>
    <div class="p-2"> 

        <div class="flex items-center dark:text-white">
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                </svg>
                <p class="ml-1">{blog.frontmatter.author}</p>
            </div>

            <div class="ml-3 flex items-center">
                <svg  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
                </svg>
                <p class="ml-1">{blog.frontmatter.date}</p>
            </div>

            <div class="ml-3 flex items-center">
                <svg  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p class="ml-1">{blog.frontmatter.time}</p>
            </div>
        </div>

        <div class="">
            <a href={blog.url}><h3 class="font-semibold tracking-wide text-xl text-CBlue">{blog.frontmatter.title}</h3></a>
            <p class="text-md dark:text-white">{blog.frontmatter.description}</p>
        </div>

        <a href={blog.url}><button  class="mt-3  text-black hover:text-white dark:bg-CGray hover:bg-CBlue py-2 px-4 dark:text-white border-2 border-CCool dark:border-CWhite rounded-md dark:hover:bg-CBlue dark:hover:text-CGray hover:border-CBlue">Continue Reading</button></a>
    </div>
</div>

<script>
    const blurDiv = document.querySelectorAll(".blur-load")
    blurDiv.forEach(div => {
    const img = div.querySelector("img")

        function loaded() {
            div.classList.add("loaded")
        }

        if (img.complete) {
            loaded();
        }

        else {
            img.addEventListener("load" ,loaded)
        }
    })
        
</script>





