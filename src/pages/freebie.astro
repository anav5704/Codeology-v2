</Base>

<style is:inline>

    .blur-load {
    background-size: cover;
    background-position:center;
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    }

    .blur-load img{
    object-fit: cover;
    height: 100%;
}

</style>

<script is:inline>
    const blurDiv = document.querySelector(".blur-load")
    const img = blurDiv.querySelector("img")

    function loaded() {
        blurDiv.classList.add("loaded")
    }

    if (img.complete) {
        loaded();
    }

    else {
        img.addEventListener("load" ,loaded)
    }
</script>



