<style is:inline>
     input[type = "checkbox"]:checked ~ #content {
        max-height: 200px;
        opacity: 1;
    }

     input[type = "checkbox"]:checked ~ h3 label svg {
        rotate: -180deg;
    }
    
    #content {
        transition: all .3s ease 0s;
        opacity: 0;
    }

    h3 label svg {
        transition: all .3s ease;
    }

    .tech svg {
        aspect-ratio: 1/1;
        height: 50px;
        margin-right: 15px;
    }

    .blur-load {
    background-size: cover;
    background-position:center;
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    }

    .blur-load img{
    object-fit: cover;
    height: 100%;
}

</style>

<script is:inline>
    const blurDiv = document.querySelector(".blur-load")
    const img = blurDiv.querySelector("img")

    function loaded() {
        blurDiv.classList.add("loaded")
    }

    if (img.complete) {
        loaded();
    }

    else {
        img.addEventListener("load" ,loaded)
    }
</script>



